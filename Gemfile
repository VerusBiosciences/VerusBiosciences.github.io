source 'https://rubygems.org'
gem 'jekyll', '>= 3.0'
gem 'github-pages'

group :jekyll_plugins do
    gem 'jekyll-feed' 
    gem 'jekyll-sitemap'
    gem 'jekyll-seo-tag'
    gem 'jekyll-gist'
    gem 'jekyll-avatar'
end

gem 'rouge'
gem 'wdm', '>= 0.1.0' if Gem.win_platform?
gem 'sassc'
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]

